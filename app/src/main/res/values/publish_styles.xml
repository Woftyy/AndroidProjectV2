<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 发布模块导航栏的标题样式 -->
    <style name="publish_title">
        <item name="android:textColor">@color/publish_title_text</item>
        <item name="android:textSize">22sp</item>
    </style>
    <!-- 发布模块主演两个按钮样式 -->
    <style name="publish_btn_two">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/publish_btn_text</item>
    </style>
    <!-- 是否线上选择的样式 -->
    <style name="publish_cb_isonline_style"  parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/publish_cb_isonline_drawable</item>
    </style>
    <!-- 分享的样式 -->
    <style name="publish_cb_fenxiang_style"  parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/publish_cb_fenxiang_drawable</item>
    </style>
    <!-- 发布技能和需求的文字样式 -->
    <style name="publish_fb_wenzi">
        <item name="android:textColor">@color/publish_title_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 时间选择器用到的style -->
    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
    <!-- 照片添加用到的style -->
    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    <!--<color name="white">#ffffff</color>-->
</resources>
