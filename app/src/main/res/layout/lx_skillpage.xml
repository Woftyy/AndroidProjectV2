<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="250dp">

    <!--图片下面的图片和标题-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp">
        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@mipmap/default_avatar400"/>
        <TextView
            android:id="@+id/skillTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:gravity="left|center_vertical"
            android:textSize="13sp"
            android:lineSpacingExtra="10dp"
            android:text="@string/textTitle"
            />
        <View
            android:layout_width="1.5dp"
            android:layout_height="30sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center_vertical"
            android:background="#DBDBDB"/>
        <TextView
            android:id="@+id/skillType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:text="skillType"
            />

    </LinearLayout>

    <!--价格，开始日期，结束日期-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:textColor="#e46a6a"
        android:textSize="18sp"
        android:text="这里显示价格"
        android:gravity="center_vertical"
        android:layout_marginLeft="28dp"/>
    <TextView
        android:id="@+id/startDate"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:textColor="#807f7f"
        android:textSize="13sp"
        android:text="开始时间"
        android:gravity="center_vertical"
        android:layout_marginLeft="28dp"/>
    <TextView
        android:id="@+id/stopDate"
        android:layout_width="match_parent"
        android:layout_height="35sp"
        android:textColor="#807f7f"
        android:textSize="13sp"
        android:text="结束时间"
        android:gravity="center_vertical"
        android:layout_marginLeft="28dp"/>

    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#DBDBDB"/>

    <!--个人信息展示-->
    <LinearLayout
        android:id="@+id/persondetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/personPic"
                android:layout_width="68sp"
                android:layout_height="68sp"
                android:background="@mipmap/default_avatar400"
                android:layout_margin="8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/personName"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:textSize="15sp"
                    android:textColor="#151414"
                    android:text="人物信息名称"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    />
                <TextView
                    android:id="@+id/personRank"
                    android:layout_width="match_parent"
                    android:layout_height="30sp"
                    android:textSize="15sp"
                    android:textColor="#151414"
                    android:text="此处展示评价等级"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/fansNum"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_weight="1"
                    android:text="showNum"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:text="关注人数"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#000000"/>
            </LinearLayout>
            <View
                android:layout_width="0.1dp"
                android:layout_height="45sp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="#DBDBDB"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/skillNum"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_weight="1"
                    android:text="showNum"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:text="技能数"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#000000"/>
            </LinearLayout>
            <View
                android:layout_width="0.1dp"
                android:layout_height="45sp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="#DBDBDB"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/finishNum"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_weight="1"
                    android:text="showNum"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_weight="1"
                    android:text="完成数"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:background="#DBDBDB"/>

    <TextView
        android:id="@+id/skillContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#151414"
        android:text="@string/textContent"
        android:lineSpacingExtra="8dp"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        />

</LinearLayout>