<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/publish_fb_jiantou"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/publish_popupwindow_fb">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/publish_tv_fbskill"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/publish_color_second"
            android:drawableLeft="@drawable/publish_skill"
            android:layout_gravity="center"
            android:drawablePadding="2dp"
            android:layout_marginLeft="10dp"
            android:text="@string/publish_fbskill_text"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/publish_color_second"></View>
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/publish_tv_fbneed"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/publish_color_second"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/publish_need"
            android:drawablePadding="2dp"
            android:text="@string/publish_fbneed_text"/>
    </LinearLayout>
</LinearLayout>
