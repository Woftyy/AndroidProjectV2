<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/publish_username"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/publish_username"
                android:drawablePadding="4dp"
                android:textSize="14dp"
                android:text="刘瑞钰"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/publish_fbtime"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/publish_fbtime"
                android:drawablePadding="4dp"
                android:textSize="14dp"
                android:text="2017/10/15"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#DBDBDB"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/publish_touxiang"
                android:src="@drawable/publish_touxiang"
                android:layout_gravity="center_vertical" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/publish_detail"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:textSize="14dp"
                android:text="我的需求：找一个会android应用程序的开发，包括UI组件、网络编程、多线程处理、数据存储、图形图像、动画等。"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#DBDBDB"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/publish_dingwei"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/publish_dingwei"
                android:drawablePadding="4dp"
                android:textSize="14dp"
                android:text="地点"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/publish_isfinished"
                android:src="@drawable/publish_fb_finished"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/publish_fenxiang"
                android:layout_marginRight="50dp"
                android:visibility="visible"
                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/publish_fenxiang"
                style="@style/publish_cb_fenxiang_style"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:checked="false"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/publish_fb_fenxiang_rl"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="分享到"
                android:layout_marginLeft="16dp"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:background="@drawable/publish_fb_fenxiang_shape"
                android:layout_toLeftOf="@+id/publish_fb_fenxiang_wechat"
                android:id="@+id/publish_fenxiang_qq"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/publish_fb_fenxiang_qq"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:text="QQ"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:background="@drawable/publish_fb_fenxiang_shape"
                android:layout_alignParentRight="true"
                android:id="@+id/publish_fb_fenxiang_wechat"
                android:layout_marginRight="16dp"
                android:drawableLeft="@drawable/publish_fb_fenxiang_wechat"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:textSize="14dp"
                android:text="微信"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
